
<!-- ACCOUNT -->

{{#each accounts}}
    {{#equals accountId ../parameters.accountId}}

<form data-history="A/C {{accountId}}: {{accountName}}">
  <input type="hidden" name="accountId" value="{{accountId}}"/>
</form>

{{#if hasLogo}}
<img title="{{accountName}}" class="logo" src="./media/account/account-{{accountId}}.png" />
{{/if}}

<div class="edit nugget">
  <a id="edit-mode" title="Edit toggle"></a>
  <h2>Account #{{accountId}} &quot;{{accountName}}&quot;</h2>
</div>

<section class="view">

  <div class="nugget account">

    <h3>#{{accountId}}</h3>

    <form data-update data-editmode data-table="bab_account">
      <a class="auto-click navigator hidden" data-place="place" data-insert="place" data-target="place-target"></a>

      <template data-keys>
        <section>
          <input data-key="accounts" />
          <input data-key="{{@index}}" />
        </section>
      </template>

      <input type="hidden" data-primary data-column="id" name="accountId" value="{{accountId}}" />
      <input type="hidden" data-column="place_id" name="placeId" value="{{placeId}}" />

      <section>
        <h4>Availability</h4>
        <div {{#if deleted}}class="deleted"{{/if}}>
          <span class="legend">Deleted</span>
          <input type="checkbox" data-column="deleted" name="deleted" {{#if deleted}}checked{{/if}} />
        </div>
      </section>

      <section>
        <h4>Details</h4>
        <div>
          <span class="legend">Name</span>
          <input class="char-16" type="text" data-column="name" name="accountName" value="{{accountName}}" />
        </div>
        <div>
          <span class="legend">Company name</span>
          <input class="char-16" type="text" data-column="company_name" name="companyName" value="{{companyName}}" />
        </div>
        <div>
          <span class="legend">Reg. charity nr.</span>
          <input class="char-16" type="text" data-column="registered_charity_nr" name="registeredCharityNr" value="{{registeredCharityNr}}" />
        </div>
      </section>

      <section>
        <h4>Claw-back number of payments</h4>
        <div>
          <span class="legend">Less than</span>
          <input class="char-4 number" type="text" data-column="min_payments_no_claw_back" name="minPaymentsNoClawBack" value="{{minPaymentsNoClawBack}}" />
        </div>
      </section>

      <section>
        <h4>Tickets per sign-up</h4>
        <div>
          <span class="legend">Maximum</span>
          <input class="char-4 number" type="text" data-column="lottery_tickets_qty_max" name="lotteryTicketsQtyMax" value="{{lotteryTicketsQtyMax}}" />
        </div>
        <div>
          <span class="legend">Admin flag</span>
          <input class="char-4 number" type="text" data-column="lottery_tickets_qty_admin_intervene" name="lotteryTicketsQtyAdminIntervene" value="{{lotteryTicketsQtyAdminIntervene}}" />
        </div>
        <div>
          <span class="legend">Team leader flag</span>
          <input class="char-4 number" type="text" data-column="lottery_tickets_qty" name="lotteryTicketsQtyTeamleaderIntervene" value="{{lotteryTicketsQtyTeamleaderIntervene}}" />
        </div>
      </section>

    </form>

  </div>

  <div class="nugget place">

    <h3>Contact/location</h3>

    <div id="place-target"></div>

  </div>

</section>

    {{/equals}}
{{/each}}

<div id="place-target" class="layer1"></div>
